<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>io.teocloud.teo-intellij-idea</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Teo Language</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="victor.teo@fillmula.com" url="https://teocloud.io">Teo Cloud</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    <p>Teo schema language support.</p>
    <p>Open any *.teo file with Teo language inside. There are number of features available:</p>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Language -->
        <fileType
                name="Teo File"
                implementationClass="io.teocloud.teointellijidea.TeoFileType"
                fieldName="INSTANCE"
                language="Teo"
                extensions="teo"/>
        <lang.parserDefinition
                language="Teo"
                implementationClass="io.teocloud.teointellijidea.TeoParserDefinition"/>
        <!-- Syntax highlighting -->
        <lang.syntaxHighlighterFactory
                language="Teo"
                implementationClass="io.teocloud.teointellijidea.TeoSyntaxHighlighterFactory"/>
        <annotator
                language="Teo"
                implementationClass="io.teocloud.teointellijidea.TeoAnnotator"/>
        <!-- Code completion -->
        <completion.contributor
                language="Teo"
                implementationClass="io.teocloud.teointellijidea.completion.TeoCompletionContributor" />
        <typedHandler implementation="io.teocloud.teointellijidea.completion.handler.TeoTypedHandler"
                      order="first, before completionAutoPopup"/>
        <!-- Editor -->
        <lang.commenter language="Teo"
                        implementationClass="io.teocloud.teointellijidea.editor.TeoCommenter"/>
        <lang.braceMatcher language="Teo"
                           implementationClass="io.teocloud.teointellijidea.editor.TeoBraceMatcher"/>
        <lang.quoteHandler language="Teo" implementationClass="io.teocloud.teointellijidea.editor.TeoQuoteHandler" />
        <enterBetweenBracesDelegate language="Teo"
                                    implementationClass="com.intellij.codeInsight.editorActions.enter.EnterBetweenBracesAndBracketsDelegate"/>
        <lineIndentProvider implementation="io.teocloud.teointellijidea.editor.TeoLineIndentProvider"/>
        <langCodeStyleSettingsProvider
                implementation="io.teocloud.teointellijidea.formatter.TeoLanguageCodeStyleSettingsProvider"/>
        <!-- Documentation -->
        <lang.documentationProvider language="Teo"
                                    implementationClass="io.teocloud.teointellijidea.documentation.TeoDocumentationProvider"/>
    </extensions>
</idea-plugin>
